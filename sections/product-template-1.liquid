<!-- product-template-1.liquid -->


{% liquid
  assign productpage = section.settings.productpage
  assign idproduct = ''

  case productpage 
  when 'product-1' 
    assign idproduct = 'product-template-1' 
    render 'product-template-style-1' 
  when 'product-2' 
    assign idproduct = 'product-template-2' 
    render 'product-template-style-2' 
  when 'product-3' 
    assign idproduct = 'product-template-3' 
    render 'product-template-style-3' 
  when 'product-4' 
    assign idproduct = 'product-template-4' 
    render 'product-template-style-4' 
  when 'product-5' 
    assign idproduct = 'product-template-5' 
    render 'product-template-style-5' 
  when 'product-6' 
    assign idproduct = 'product-template-6' 
    render 'product-template-style-6' 
  when 'product-7' 
    assign idproduct = 'product-template-7' 
    render 'product-template-style-7' 
  when 'product-8' 
    assign idproduct = 'product-template-8' 
    render 'product-template-style-8' 
  else 
    assign idproduct = 'product-template-1' 
    render 'product-template-style-1' 
  endcase 
%}
<div class=" js-recently-view" itemscope itemtype="http://schema.org/Product" id="ProductSection-{{ section.id }}" data-id="{{ idproduct }}" data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true" data-ajax="true" data-stock="{{ section.settings.stock_enable }}" data-handle="{{product.handle}}">
  {% assign product_image_size = '480x480' %}
  {% assign current_variant = product.selected_or_first_available_variant %}
  <meta itemprop="name" content="{{ product.title }}">
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | img_url: '600x600' }}">
  <meta itemprop="brand" content="{{ product.vendor }}">
  <div class="{{ section.settings.setwidth }}">
    {%- case productpage -%}
      {%- when 'product-1' -%}
        {% include 'product-template-1' %}
      {%- when 'product-2' -%}
        {% include 'product-template-2' %}
      {%- when 'product-3' -%}
        {% include 'product-template-3' %}
      {%- when 'product-4' -%}
        {% include 'product-template-4' %}
      {%- when 'product-5' -%}
        {% include 'product-template-5' %}
      {%- when 'product-6' -%}
        {% include 'product-template-6' %}
      {%- when 'product-7' -%}
        {% include 'product-template-7' %}
      {%- when 'product-8' -%}
        {% include 'product-template-8' %}
    {%- else -%}
    {% include 'product-template-1' %}
  {%- endcase -%}
  </div>
  {% if section.settings.positiontab == "bottom" %}
    <div class="container ">
        <div class="row justify-content-md-center">
            <div class="col-lg-9 col-12">
            {% if section.settings.enable_tabvertical %}
              {%- include 'product-information-vertical' -%}
            {% else %}
            {%- include 'product-information' -%}
            {% endif %}
          </div>
      </div>
    </div>
  {% endif %}
    <div class="row">
      {% for block in section.blocks %}
        {% if block.type == 'html' %}
          {%- include 'html-product' -%}
        {% elsif block.type == 'video' %}
          {%- include 'video-product'-%}
        {% elsif block.type == 'related-product' %}
          {%- include 'related-products' -%}
        {% elsif block.type == 'service' %}
        {%- include 'service-pro' -%}
      {% endif %}
      {% endfor %}
    </div>
  {%- include 'cross-sell' -%}
  {%- include 'upsell' -%}
  {%- include 'next-prev-product' -%}
  {%- include 'photoswipe' -%}
  {%- include 'sticky-cart' -%}
  </script>
</div>

