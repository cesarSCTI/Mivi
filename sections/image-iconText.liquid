{% stylesheet %}
.mivi-skincare-section img.icon {
  width: 32px;
  height: auto;
}
{% endstylesheet %}

<section class="mivi-skincare-section py-5" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    <div class="row align-items-center">
      <!-- Imagen -->
      <div class="col-md-6 mb-4 mb-md-0 text-center">
        {{ section.settings.image | image_url: width: 800 | image_tag: class: 'img-fluid rounded shadow' }}
      </div>

      <!-- Texto con íconos -->
      <div class="col-md-6">
        <h4 class="font-weight-bold mb-4">{{ section.settings.heading }}</h4>
        <ul class="list-unstyled">
          {% for block in section.blocks %}
            <li class="mb-4 d-flex">
              {% if block.settings.icon %}
                {{ block.settings.icon | image_url: width: 64 | image_tag: class: 'mr-3 icon' }}
              {% endif %}
              <p class="mb-10">{{ block.settings.text }}</p>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Mivi Medical Skincare",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo",
      "default": "#fff3f0"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen principal"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título principal",
      "default": "¿Por qué elegir Mivi Medical Skincare?"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Característica",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ícono"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto",
          "default": "Texto de la característica"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Mivi Skincare - Lista con imagen",
      "category": "Secciones personalizadas",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "text": "Fórmulas cuidadosamente desarrolladas para mejorar visiblemente la piel."
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Aptos para todo tipo de piel, incluso las más sensibles."
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Texturas ligeras, efectivas y sin fragancias agresivas."
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Usuarios notan mejoras en pocas semanas. *Resultados pueden variar según el tipo de piel."
          }
        }
      ]
    }
  ]
}
{% endschema %}
