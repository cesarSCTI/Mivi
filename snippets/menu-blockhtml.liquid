
{%- if settings[ap_html_eimg] -%}
<div class="block-html">
  {%- if settings[ap_html_title] != blank -%}
  <div class="menu-title">{{ settings[ap_html_title] }}</div>
  {%- endif -%}
  <div class="widget-inner">
    <div class="box-image">
      <a href="{{ settings[ap_html_link] | default: '#' }}">
      <img class="lazyload" data-src="{{ settings[ap_html_img] | img_url:'1170x' }}" alt="{{settings[ap_html_title]}}"/>
      </a>
    </div>
    {%- if settings[ap_html_des] != blank -%}
<a class="d-block {% if settings[ap_html_center] %} text-center {% endif %}" href="{{ settings[ap_html_link] | default: '#' }}">
    {{ settings[ap_html_des] }}
    </a>
    {%- endif -%}
  </div>
</div>
{%- endif -%}

