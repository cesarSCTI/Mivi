    border: none;
    border-bottom: 2px solid transparent;
    color: #222;
    font-size: 16px;
  }

  #nav-tab-info .nav-tabs .nav-link.active {
    border-bottom: 2px solid {{settings.color_primary}};
  }

  #nav-tab-info .nav-tabs .nav-item {
    text-transform: uppercase;
    padding:0;
    margin:0 5rem -2px 0;
