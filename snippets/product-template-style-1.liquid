    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
  }

  .product-form__quantity-submit {
    display: flex;
    align-items: center;
    padding-top: 10px;
  }

  .product-form__quantity-submit .product-form__item--submit {
    margin-left: 10px;
  }

